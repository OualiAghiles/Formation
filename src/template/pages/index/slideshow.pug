  // Indicators
  ol.carousel-indicators
    li.active(data-target='#sg-carousel', data-slide-to='0')
    li(data-target='#sg-carousel', data-slide-to='1')
    li(data-target='#sg-carousel', data-slide-to='2')
  // Wrapper For Slides
  .carousel-inner.carousel-zoom(role='listbox')
    // Third Slide
    .carousel-item.active
      // Slide Background
      img.d-block.w-100(src='https://images.pexels.com/photos/48726/pexels-photo-48726.jpeg?w=940&h=650&auto=compress&cs=tinysrgb', alt='Bootstrap Touch Slider')
      .bs-slider-overlay
      .container-fluid
        .row
          // Slide Text Layer
          .carousel-caption.d-none.d-md-block.slide_style_left
            h1(data-animation='animated zoomInRight') Bootstrap Carousel
            p(data-animation='animated fadeInLeft') Bootstrap carousel now touch enable slide.
            a.btn.btn-default(href='http://bootstrapthemes.co/', target='_blank', data-animation='animated fadeInLeft') select one
            a.btn.btn-primary(href='http://bootstrapthemes.co/', target='_blank', data-animation='animated fadeInRight') select two
    // End of Slide

// End  bootstrap-touch-slider Slider
mixin carousel_animate(id, carousel_items, slides)
  div(id=id class="sc_carousel carousel  slide carousel-fade" data-ride="carousel")
    ol.carousel-indicators
      each item in carousel_items
        - var simple_slide ={"class":item.cls, 'data-slide-to':item.order, "data-target":item.id}
        li()&attributes(simple_slide)          
    .carousel-inner.carousel-zoom(role='listbox')      
      each slide_item in slides
        .carousel-item(class=slide_item.active)
          - var imgSlide={"src":slide_item.src, "alt":slide_item.alt}
            // Slide Background
            img.d-block.w-100()&attributes(imgSlide)
            .bs-slider-overlay
            // Slide Text Layer
            - var sc_caption={"class":slide_item.captionCls}
            .carousel-caption.d-none.d-md-block(data-animation='animated fadeInLeft')&attributes(sc_caption)
              - var contentCaption = {"data-animation":slide_item.animationTitle}
              h1()&attributes(contentCaption)= slide_item.titleText
              p(data-animation='animated fadeInLeft') Bootstrap carousel now touch enable slide.
              a.btn.btn-outline-primary(href='#', target='_blank', data-animation='animated fadeInLeft') select one
    a.left.carousel-control(href='#'+id, role='button', data-slide='prev')
      span.fa.fa-angle-left(aria-hidden='true')
      span.sr-only Previous
    // Right Control
    a.right.carousel-control(href='#'+id, role='button', data-slide='next')
      span.fa.fa-angle-right(aria-hidden='true')
      span.sr-only Next
